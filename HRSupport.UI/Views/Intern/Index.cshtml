@model List<HRSupport.UI.Models.InternViewModel>
<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h2>Stajyer Takip Listesi</h2>
        <a asp-action="Create" class="btn btn-success">+ Yeni Stajyer Kaydı</a>
    </div>
    <div class="table-responsive">
        <table class="table table-hover shadow-sm border">
            <thead class="table-primary">
                <tr>
                    <th>Ad Soyad</th>
                    <th>Üniversite</th>
                    <th>Sınıf</th>
                    <th>Staj Dönemi</th>
                    <th>Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var intern in Model)
                {
                    <tr>
                        <td><strong>@intern.FullName</strong><br /><small>@intern.Email</small></td>
                        <td>@intern.University / @intern.Major</td>
                        <td>@intern.Grade. Sınıf</td>
                        <td>@intern.StartDate.ToShortDateString() - @intern.EndDate.ToShortDateString()</td>
                        <td><span class="badge bg-info text-dark">Aktif Stajyer</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>