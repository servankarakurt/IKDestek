@model List<HRSupport.UI.Models.InternViewModel>
@{ ViewData["Title"] = "Stajyer Yönetimi"; }
@* Silme isteği için anti-forgery token *@
<div id="antiForgeryContainer" style="display:none;">@Html.AntiForgeryToken()</div>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="display-5 fw-bold text-dark">
                <i class="bi bi-mortarboard-fill text-success me-2"></i>Stajyerler
            </h1>
            <p class="text-muted">Toplam: <strong>@Model.Count</strong> aktif stajyer</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" asp-controller="Intern" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Yeni Stajyer Kaydı
            </a>
        </div>
    </div>

    @if (TempData["TempPasswordInfo"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            <strong>Başarılı!</strong> @TempData["TempPasswordInfo"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            @if (Model?.Count > 0)
            {
                <table class="table table-hover mb-0">
                    <thead class="bg-light border-bottom">
                        <tr>
                            <th class="fw-bold text-dark">Ad Soyad</th>
                            <th class="fw-bold text-dark">Üniversite</th>
                            <th class="fw-bold text-dark">Program</th>
                            <th class="fw-bold text-dark">Sınıf</th>
                            <th class="fw-bold text-dark">Staj Dönemi</th>
                            <th class="fw-bold text-dark">Mentor</th>
                            <th class="fw-bold text-center text-dark">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var intern in Model)
                        {
                            <tr class="align-middle">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-success rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px; color: white; font-weight: bold;">
                                            @((intern.FirstName?.FirstOrDefault() ?? 'X').ToString().ToUpper())@((intern.LastName?.FirstOrDefault() ?? 'X').ToString().ToUpper())
                                        </div>
                                        <div>
                                            <strong>@intern.FullName</strong><br />
                                            <small class="text-muted">@intern.Email</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@intern.University</td>
                                <td>@intern.Major</td>
                                <td>
                                    <span class="badge bg-primary">@intern.Grade. Sınıf</span>
                                </td>
                                <td>
                                    <small>@intern.StartDate.ToString("dd.MM.yyyy") - @intern.EndDate.ToString("dd.MM.yyyy")</small>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@intern.MentorName</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Detail" asp-controller="Intern" asp-route-id="@intern.Id" class="btn btn-outline-info" title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-controller="Intern" asp-route-id="@intern.Id" class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" asp-action="ResetPassword" asp-controller="Intern" class="d-inline" onsubmit="return confirm('Bu stajyerin şifresi yeni bir geçici şifre ile sıfırlanacak. Devam?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="email" value="@intern.Email" />
                                            <button type="submit" class="btn btn-outline-secondary" title="Şifre sıfırla">
                                                <i class="bi bi-key"></i>
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-outline-danger" title="Sil" onclick="deleteIntern(@intern.Id)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3">Henüz stajyer kaydı yok.</p>
                    <a asp-action="Create" asp-controller="Intern" class="btn btn-success mt-3">
                        <i class="bi bi-plus-circle me-2"></i>İlk Stajyeri Ekle
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteIntern(id) {
            if (!confirm("Bu stajyeri listeden kaldırmak istediğinize emin misiniz?\n\nEvet derseniz kayıt \"silindi\" işaretlenecek ve listede görünmeyecek.")) return;

            var tokenEl = document.querySelector('input[name="__RequestVerificationToken"]');
            var token = tokenEl ? tokenEl.value : '';
            var headers = { 'Content-Type': 'application/json' };
            if (token) headers['RequestVerificationToken'] = token;

            fetch('/Intern/Delete/' + id, { method: 'POST', headers: headers })
                .then(function (response) {
                    return response.text().then(function (text) {
                        var data = null;
                        try { data = JSON.parse(text); } catch (e) { }
                        return { ok: response.ok, status: response.status, data: data, raw: text };
                    });
                })
                .then(function (result) {
                    if (result.ok && result.data && result.data.success) {
                        location.reload();
                        return;
                    }
                    var msg = (result.data && result.data.message) ? result.data.message : "Silme işlemi başarısız oldu.";
                    if (!result.ok && result.data && result.data.error) msg = result.data.error;
                    alert(msg);
                })
                .catch(function (error) {
                    console.error('Hata:', error);
                    alert("Silme işlemi sırasında sunucu ile bağlantı kurulamadı.");
                });
        }
    </script>
}