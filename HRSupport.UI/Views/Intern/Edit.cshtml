@model HRSupport.UI.Models.UpdateInternViewModel
@{
    ViewData["Title"] = "Stajyer Düzenle";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-warning bg-gradient text-dark p-4">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i>Stajyer Bilgilerini Düzenle</h4>
                </div>
                <div class="card-body p-5 bg-light">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FirstName" class="form-control rounded-3" placeholder="Ad" required />
                                    <label asp-for="FirstName">Ad</label>
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control rounded-3" placeholder="Soyad" required />
                                    <label asp-for="LastName">Soyad</label>
                                </div>
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Email" type="email" class="form-control rounded-3" placeholder="E-Posta" required />
                                    <label asp-for="Email">E-Posta Adresi</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Phone" type="tel" class="form-control rounded-3" placeholder="Telefon" />
                                    <label asp-for="Phone">Telefon Numarası</label>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select asp-for="Grade" class="form-select rounded-3">
                                        <option value="1">1. Sınıf</option>
                                        <option value="2">2. Sınıf</option>
                                        <option value="3">3. Sınıf</option>
                                        <option value="4">4. Sınıf</option>
                                        <option value="5">Mezun</option>
                                    </select>
                                    <label asp-for="Grade">Sınıf</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="StartDate" type="date" class="form-control rounded-3" value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
                                    <label asp-for="StartDate">Başlangıç Tarihi</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="EndDate" type="date" class="form-control rounded-3" value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
                                    <label asp-for="EndDate">Bitiş Tarihi</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-3 mt-4">
                            <a asp-action="Index" class="btn btn-light border-secondary px-4 py-2 rounded-3 shadow-sm fw-bold">İptal</a>
                            <button type="submit" class="btn btn-warning px-5 py-2 rounded-3 shadow fw-bold">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}