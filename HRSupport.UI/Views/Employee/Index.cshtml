@model List<HRSupport.UI.Models.EmployeeViewModel>

<div class="container mt-4">
@if (TempData["TempPasswordInfo"] != null)
{
    <div class="alert alert-success">@TempData["TempPasswordInfo"]</div>
}


    <div class="d-flex justify-content-between mb-3">
        <h2>Çalışan Listesi</h2>
        <a asp-action="Create" asp-controller="Employee" class="btn btn-primary">+ Yeni Çalışan</a>
    </div>

    @if (Model?.Count > 0)
    {
        <table class="table table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Ad Soyad</th>
                    <th>Email</th>
                    <th>Departman</th>
                    <th>Başlama Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>@emp.FullName</td>
                        <td>@emp.Email</td>
                        <td>@emp.Department</td>
                        <td>@emp.StartDate.ToShortDateString()</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Employee" asp-route-id="@emp.Id" class="btn btn-sm btn-info">Detay</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> Henüz hiç çalışan bulunmamaktadır.
        </div>
    }
</div>
