@model List<HRSupport.UI.Models.EmployeeViewModel>
@{ ViewData["Title"] = "Çalışan Yönetimi"; }

<div class="container-fluid py-4">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow" role="alert">
            <strong><i class="bi bi-exclamation-triangle-fill"></i> Hata:</strong>
            @foreach (var key in ViewData.ModelState.Keys)
            {
                foreach (var err in ViewData.ModelState[key]!.Errors)
                {
                    <div>@err.ErrorMessage</div>
                }
            }
            <hr />
            <small>Detay için: <a href="/Employee/Diagnostic" target="_blank">/Employee/Diagnostic</a> sayfasını açıp çıktıyı kopyalayın.</small>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="display-5 fw-bold text-dark">
                <i class="bi bi-people-fill text-primary me-2"></i>Çalışanlar
            </h1>
            <p class="text-muted">Toplam: <strong>@Model.Count</strong> çalışan</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" asp-controller="Employee" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Yeni Çalışan Ekle
            </a>
        </div>
    </div>

    @if (TempData["TempPasswordInfo"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            <strong>Başarılı!</strong> @TempData["TempPasswordInfo"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            @if (Model?.Count > 0)
            {
                <table class="table table-hover mb-0">
                    <thead class="bg-light border-bottom">
                        <tr>
                            <th class="fw-bold text-dark">Ad Soyad</th>
                            <th class="fw-bold text-dark">E-posta</th>
                            <th class="fw-bold text-dark">Telefon</th>
                            <th class="fw-bold text-dark">Departman</th>
                            <th class="fw-bold text-dark">İşe Başlama</th>
                            <th class="fw-bold text-center text-dark">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model)
                        {
                            <tr class="align-middle">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px; color: white; font-weight: bold;">
                                            @((emp.FirstName?.FirstOrDefault() ?? 'X').ToString().ToUpper())@((emp.LastName?.FirstOrDefault() ?? 'X').ToString().ToUpper())
                                        </div>
                                        <div>
                                            <strong>@emp.FullName</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="mailto:@emp.Email" class="text-decoration-none">@emp.Email</a>
                                </td>
                                <td>@emp.Phone</td>
                                <td>
                                    <span class="badge bg-info text-dark">@emp.Department</span>
                                </td>
                                <td>@emp.StartDate.ToString("dd.MM.yyyy")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Detail" asp-controller="Employee" asp-route-id="@emp.Id" class="btn btn-outline-info" title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-controller="Employee" asp-route-id="@emp.Id" class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" asp-action="ResetPassword" asp-controller="Employee" class="d-inline" onsubmit="return confirm('Bu çalışanın şifresi yeni bir geçici şifre ile sıfırlanacak. Devam?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="email" value="@emp.Email" />
                                            <button type="submit" class="btn btn-outline-secondary" title="Şifre sıfırla">
                                                <i class="bi bi-key"></i>
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-outline-danger" title="Sil" onclick="deleteEmployee(@emp.Id)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3">Henüz çalışan kaydı yok.</p>
                    <a asp-action="Create" asp-controller="Employee" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle me-2"></i>İlk Çalışanı Ekle
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .avatar-sm {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: white;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.02);
    }
</style>
@section Scripts {
    <script>
        function deleteEmployee(id) {
            if (!confirm("Bu personeli silmek istediğinize emin misiniz? Bu işlem geri alınamaz.")) return;
            fetch('/Employee/Delete/' + id, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Başarılıysa sayfayı yenile
                        location.reload();
                    } else {
                        // Başarısızsa hata mesajı göster
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Hata:', error);
                    alert("Silme işlemi sırasında sunucu ile bağlantı kurulamadı.");
                });
            }
        }
    </script>
}