@model HRSupport.UI.Models.EmployeeDetailViewModel
@{
    ViewData["Title"] = "Çalışan Detayı";
    string StatusText(int s) => s switch { 1 => "Beklemede", 2 => "Reddedildi", 3 => "Onaylandı", 4 => "Revizyon Bekleniyor", _ => s.ToString() };
    string TypeText(int t) => t switch { 1 => "Yıllık", 2 => "Hastalık", 3 => "Mazeret", 4 => "Ücretsiz", 5 => "Doğum", 6 => "Ölüm", 7 => "Babalık", 8 => "Çocuğun Evlenmesi", 9 => "Evlilik", 10 => "Refakatçi", 11 => "Ek Mazeret", 12 => "Taşınma", _ => t.ToString() };
}

<div class="container-fluid py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">@TempData["SuccessMessage"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">@TempData["ErrorMessage"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"><i class="bi bi-person-vcard me-2"></i>@Model.FullName</h2>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="bi bi-pencil me-1"></i>Düzenle</a>
    </div>

    <div class="row">
        <div class="col-lg-5">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light"><h5 class="mb-0">Temel Bilgiler</h5></div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">E-posta</dt><dd class="col-sm-8">@Model.Email</dd>
                        <dt class="col-sm-4">Telefon</dt><dd class="col-sm-8">@Model.Phone</dd>
                        <dt class="col-sm-4">TCKN</dt><dd class="col-sm-8">@(Model.TCKN ?? "—")</dd>
                        <dt class="col-sm-4">Sicil No</dt><dd class="col-sm-8">@Model.CardID</dd>
                        <dt class="col-sm-4">Doğum Tarihi</dt><dd class="col-sm-8">@Model.BirthDate.ToString("dd.MM.yyyy")</dd>
                        <dt class="col-sm-4">İşe Giriş</dt><dd class="col-sm-8">@Model.StartDate.ToString("dd.MM.yyyy")</dd>
                        <dt class="col-sm-4">Departman</dt><dd class="col-sm-8">@Model.DepartmentName</dd>
                        <dt class="col-sm-4">Rol</dt><dd class="col-sm-8">@Model.RolesName</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Notlar (HR / Yönetici)</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddNote" method="post" class="mb-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="employeeId" value="@Model.Id" />
                        <div class="input-group">
                            <input type="text" name="noteText" class="form-control" placeholder="Yeni not yazın..." required maxlength="2000" />
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        </div>
                    </form>
                    @if (Model.Notes != null && Model.Notes.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var n in Model.Notes)
                            {
                                <li class="list-group-item px-0">
                                    <small class="text-muted">@n.CreatedTime.ToString("dd.MM.yyyy HH:mm") @(string.IsNullOrEmpty(n.CreatedByUserName) ? "" : $" — {n.CreatedByUserName}")</small>
                                    <p class="mb-0 mt-1">@n.NoteText</p>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Henüz not yok.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-light"><h5 class="mb-0">İzin Geçmişi</h5></div>
        <div class="card-body p-0">
            @if (Model.LeaveHistory != null && Model.LeaveHistory.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Başlangıç</th>
                            <th>Bitiş</th>
                            <th>Tür</th>
                            <th>Durum</th>
                            <th>Açıklama</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var l in Model.LeaveHistory)
                        {
                            <tr>
                                <td>@l.StartDate.ToString("dd.MM.yyyy")</td>
                                <td>@l.EndDate.ToString("dd.MM.yyyy")</td>
                                <td>@TypeText(l.Type)</td>
                                <td><span class="badge @(l.Status == 3 ? "bg-success" : l.Status == 2 ? "bg-danger" : "bg-secondary")">@StatusText(l.Status)</span></td>
                                <td>@(l.Description ?? "—")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted p-3 mb-0">İzin kaydı yok.</p>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i>Listeye Dön</a>
    </div>
</div>
