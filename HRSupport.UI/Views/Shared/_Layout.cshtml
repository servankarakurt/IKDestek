<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HR Yönetim Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRSupport.UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light sticky-top">
            <div class="container-fluid">
                @{
                    var role = Context.Session.GetString("Role") ?? "";
                    var isAdminOrIk = role == "Admin" || role == "IK";
                    var isYonetici = role == "Yönetici";
                    var isPersonel = role == "Çalışan" || role == "Stajyer";
                    var brandController = isPersonel ? "PersonelPanel" : "Home";
                    var brandAction = "Index";
                }
                <a class="navbar-brand" asp-area="" asp-controller="@brandController" asp-action="@brandAction">
                    <i class="bi bi-briefcase-fill"></i>
                    HR Yönetimi
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!isPersonel)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-fill"></i> Anasayfa</a>
                            </li>
                        }
                        @if (isAdminOrIk)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Employee" asp-action="Index"><i class="bi bi-people-fill"></i> Çalışanlar</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Intern" asp-action="Index"><i class="bi bi-mortarboard-fill"></i> Stajyerler</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="LeaveRequest" asp-action="Index"><i class="bi bi-calendar-event-fill"></i> İzin Talepleri</a></li>
                        }
                        else if (isYonetici)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="LeaveRequest" asp-action="Create"><i class="bi bi-plus-circle"></i> İzin Talebi Oluştur</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Employee" asp-action="Index"><i class="bi bi-people-fill"></i> Birimim - Çalışanlar</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="LeaveRequest" asp-action="Index"><i class="bi bi-calendar-event-fill"></i> İzin Talepleri (Onay)</a></li>
                        }
                        else if (isPersonel)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="PersonelPanel" asp-action="Index"><i class="bi bi-grid-1x2-fill"></i> Panelim</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="LeaveRequest" asp-action="MyBalance"><i class="bi bi-calendar-check"></i> Kalan İzin Günüm</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="LeaveRequest" asp-action="Index"><i class="bi bi-list-ul"></i> Taleplerim</a></li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="nav-link text-muted small">@(Context.Session.GetString("FullName") ?? Context.Session.GetString("Email") ?? "Kullanıcı")</span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-link nav-link py-0"><i class="bi bi-box-arrow-right"></i> Çıkış</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="py-4">
        @RenderBody()
    </main>

    <footer class="border-top text-center py-4">
        <div class="container">
            <p class="text-muted mb-0">
                <strong>HR Yönetim Sistemi</strong> &copy; 2026 | Tüm Hakları Saklıdır.
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
