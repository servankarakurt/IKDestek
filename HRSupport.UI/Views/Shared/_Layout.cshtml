<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IK Destek</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRSupport.UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg corporate-navbar shadow-sm">
            <div class="container-fluid px-4">
                <a class="navbar-brand fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">IK Destek</a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Employee" asp-action="Index">Çalışanlar</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Intern" asp-action="Index">Stajyerler</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="LeaveRequest" asp-action="Index">İzin Talepleri</a></li>
                        <li class="nav-item ms-lg-2">
                            <a class="btn btn-sm btn-light fw-semibold" asp-controller="Auth" asp-action="Logout">Çıkış</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer corporate-footer mt-4">
        <div class="container py-3 d-flex justify-content-between flex-wrap gap-2">
            <span>© 2026 IK Destek</span>
            <span>Kurumsal İnsan Kaynakları Yönetim Platformu</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
