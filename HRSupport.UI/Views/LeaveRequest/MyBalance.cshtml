@model int
@{
    ViewData["Title"] = "Kalan İzin Günüm";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow rounded-4">
                <div class="card-header bg-primary text-white py-3 rounded-top-4">
                    <h5 class="mb-0"><i class="bi bi-calendar-check me-2"></i>Kalan Yıllık İzin Günüm</h5>
                </div>
                <div class="card-body text-center py-5">
                    <p class="display-4 fw-bold text-primary mb-0">@Model</p>
                    <p class="text-muted mb-4">gün</p>
                    <a asp-action="Create" asp-controller="LeaveRequest" class="btn btn-primary"><i class="bi bi-plus-circle me-1"></i> İzin Talebi Oluştur</a>
                </div>
            </div>
        </div>
    </div>
</div>
