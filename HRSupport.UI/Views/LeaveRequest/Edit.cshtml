@model HRSupport.UI.Models.UpdateLeaveRequestViewModel
@{
    ViewData["Title"] = "İzin Talebi Düzenle";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-warning bg-gradient text-dark p-4">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i>İzin Talebini Düzenle</h4>
                </div>
                <div class="card-body p-5 bg-light">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="EmployeeId" />

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="StartDate" type="date" class="form-control rounded-3" value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
                                    <label asp-for="StartDate">Başlangıç Tarihi</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="EndDate" type="date" class="form-control rounded-3" value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
                                    <label asp-for="EndDate">Bitiş Tarihi</label>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="Type" class="form-select rounded-3">
                                        <option value="1">Yıllık İzin</option>
                                        <option value="2">Hastalık İzni</option>
                                        <option value="3">Mazeret İzni</option>
                                    </select>
                                    <label asp-for="Type">İzin Türü</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="Status" class="form-select rounded-3">
                                        <option value="1">Beklemede</option>
                                        <option value="2">Onaylandı</option>
                                        <option value="3">Reddedildi</option>
                                    </select>
                                    <label asp-for="Status">Durum</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="Description" class="form-control rounded-3" style="height: 100px" placeholder="Açıklama"></textarea>
                            <label asp-for="Description">Açıklama / Neden</label>
                        </div>

                        <div class="d-flex justify-content-end gap-3 mt-4">
                            <a asp-action="Index" class="btn btn-light border-secondary px-4 py-2 rounded-3 shadow-sm fw-bold">İptal</a>
                            <button type="submit" class="btn btn-warning px-5 py-2 rounded-3 shadow fw-bold">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}