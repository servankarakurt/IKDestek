@model List<HRSupport.UI.Models.LeaveRequestViewModel>
@{ ViewData["Title"] = "İzin Talepleri"; }

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="display-5 fw-bold text-dark">
                <i class="bi bi-calendar-event-fill text-warning me-2"></i>İzin Talepleri
            </h1>
            <p class="text-muted">Toplam: <strong>@Model.Count</strong> izin talebi</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-warning btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Yeni İzin Talebi
            </a>
        </div>
    </div>

    @if (Model?.Count > 0)
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light border-bottom">
                        <tr>
                            <th class="fw-bold text-dark">Başlangıç</th>
                            <th class="fw-bold text-dark">Bitiş</th>
                            <th class="fw-bold text-dark">Gün Sayısı</th>
                            <th class="fw-bold text-dark">İzin Türü</th>
                            <th class="fw-bold text-dark">Durum</th>
                            <th class="fw-bold text-dark">Açıklama</th>
                            <th class="fw-bold text-center text-dark">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="align-middle">
                                <td>
                                    <strong>@item.StartDate.ToString("dd.MM.yyyy")</strong>
                                    <br />
                                    <small class="text-muted">@item.StartDate.ToString("dddd")</small>
                                </td>
                                <td>
                                    <strong>@item.EndDate.ToString("dd.MM.yyyy")</strong>
                                    <br />
                                    <small class="text-muted">@item.EndDate.ToString("dddd")</small>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@((item.EndDate - item.StartDate).Days + 1) gün</span>
                                </td>
                                <td>
                                    @if (item.Type == 1)
                                    {
                                        <span class="badge bg-danger">Yıllık İzin</span>
                                    }
                                    else if (item.Type == 2)
                                    {
                                        <span class="badge bg-warning text-dark">Mazeret</span>
                                    }
                                    else if (item.Type == 3)
                                    {
                                        <span class="badge bg-warning text-dark">Hastalık</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ücretsiz</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <span class="badge bg-info text-dark">Beklemede</span>
                                    }
                                    else if (item.Status == 2)
                                    {
                                        <span class="badge bg-danger">Reddedildi</span>
                                    }
                                    else if (item.Status == 3)
                                    {
                                        <span class="badge bg-success">Onaylandı</span>
                                    }
                                </td>
                                <td>
                                    <small>@item.Description</small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-controller="LeaveRequest" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        @* İleride yönetici / IK için onay-red butonları burada genişletilebilir *@
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">Henüz izin talebi yok.</p>
                <a asp-action="Create" class="btn btn-warning mt-3">
                    <i class="bi bi-plus-circle me-2"></i>İlk İzin Talebini Oluştur
                </a>
            </div>
        </div>
    }
</div>
