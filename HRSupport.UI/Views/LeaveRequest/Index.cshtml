@model List<HRSupport.UI.Models.LeaveRequestViewModel>

@{
    ViewData["Title"] = "İzin Talepleri";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>İzin Talepleri</h2>
        </div>
        <div class="col-md-6 text-right">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Yeni İzin Talebi
            </a>
        </div>
    </div>

    @if (Model?.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Başlangıç Tarihi</th>
                        <th>Bitiş Tarihi</th>
                        <th>İzin Türü</th>
                        <th>Durum</th>
                        <th>Açıklama</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.StartDate.ToString("dd.MM.yyyy")</td>
                            <td>@item.EndDate.ToString("dd.MM.yyyy")</td>
                            <td>@item.Type</td>
                            <td>
                                <span class="badge bg-info">@item.Status</span>
                            </td>
                            <td>@item.Description</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger" 
                                   onclick="return confirm('Silmek istediğinizden emin misiniz?')">
                                    <i class="fas fa-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Henüz hiç izin talebiniz bulunmamaktadır.
            <a href="@Url.Action("Create")">Yeni bir tane oluşturmak için tıklayın.</a>
        </div>
    }
</div>
