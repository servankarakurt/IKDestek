@model HRSupport.UI.Models.StajyerPanelViewModel
@{
    ViewData["Title"] = "Panelim";
}

<div class="container-fluid py-4">
    <h1 class="mb-4"><i class="bi bi-person-badge"></i> Stajyer Panelim</h1>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Kalan Yıllık İzin Günüm</h5>
                    <p class="display-4 fw-bold text-primary mb-0">@Model.KalanIzinGunu</p>
                    <p class="small text-muted mb-0">gün</p>
                    <a asp-controller="LeaveRequest" asp-action="Create" class="btn btn-warning btn-sm mt-2"><i class="bi bi-plus-circle"></i> İzin Talebi Oluştur</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light"><strong><i class="bi bi-person-workspace"></i> Mentor Bilgisi</strong></div>
                <div class="card-body small">
                    @if (Model.Mentor != null)
                    {
                        <p class="mb-1"><strong>@Model.Mentor.FullName</strong></p>
                        <p class="mb-1"><i class="bi bi-envelope"></i> <a href="mailto:@Model.Mentor.Email">@Model.Mentor.Email</a></p>
                        @if (!string.IsNullOrWhiteSpace(Model.Mentor.Phone))
                        {
                            <p class="mb-0"><i class="bi bi-telephone"></i> @Model.Mentor.Phone</p>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">Mentor atanmamış veya henüz yüklenemedi.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Hızlı Erişim</h5>
                    <a asp-controller="LeaveRequest" asp-action="MyBalance" class="btn btn-outline-primary btn-sm d-block mb-2">Kalan İzin Günüm</a>
                    <a asp-controller="LeaveRequest" asp-action="Create" class="btn btn-outline-success btn-sm d-block mb-2">İzin Talebi Oluştur</a>
                    <a asp-controller="LeaveRequest" asp-action="Index" class="btn btn-outline-secondary btn-sm d-block">Tüm Taleplerim</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <strong><i class="bi bi-clock-history"></i> Son 5 İzin Talebim</strong>
            <a asp-controller="LeaveRequest" asp-action="Index" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
        </div>
        <div class="card-body p-0">
            @if (Model.SonBesTalep?.Count > 0)
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Başlangıç</th>
                            <th>Bitiş</th>
                            <th>Gün</th>
                            <th>Tür</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model.SonBesTalep)
                        {
                            <tr>
                                <td>@t.StartDate.ToString("dd.MM.yyyy")</td>
                                <td>@t.EndDate.ToString("dd.MM.yyyy")</td>
                                <td>@((t.EndDate - t.StartDate).Days + 1) gün</td>
                                <td>
                                    @(t.Type == 1 ? "Yıllık" : t.Type == 2 ? "Hastalık" : t.Type == 3 ? "Mazeret" : "Diğer")
                                </td>
                                <td>
                                    @if (t.Status == 1) { <span class="badge bg-info">Beklemede</span> }
                                    else if (t.Status == 2) { <span class="badge bg-danger">Reddedildi</span> }
                                    else if (t.Status == 3) { <span class="badge bg-success">Onaylandı</span> }
                                    else { <span class="badge bg-secondary">@t.Status</span> }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted text-center py-4 mb-0">Henüz izin talebiniz yok. <a asp-controller="LeaveRequest" asp-action="Create">İlk talebinizi oluşturun</a>.</p>
            }
        </div>
    </div>

    <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-light"><strong><i class="bi bi-list-ul"></i> İzin Taleplerim</strong></div>
        <div class="card-body p-0">
            @if (Model.Taleplerim?.Count > 0)
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Başlangıç</th>
                            <th>Bitiş</th>
                            <th>Gün</th>
                            <th>Tür</th>
                            <th>Durum</th>
                            <th>Açıklama</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model.Taleplerim)
                        {
                            <tr>
                                <td>@t.StartDate.ToString("dd.MM.yyyy")</td>
                                <td>@t.EndDate.ToString("dd.MM.yyyy")</td>
                                <td>@((t.EndDate - t.StartDate).Days + 1) gün</td>
                                <td>@(t.Type == 1 ? "Yıllık" : t.Type == 2 ? "Hastalık" : t.Type == 3 ? "Mazeret" : "Diğer")</td>
                                <td>
                                    @if (t.Status == 1) { <span class="badge bg-info">Beklemede</span> }
                                    else if (t.Status == 2) { <span class="badge bg-danger">Reddedildi</span> }
                                    else if (t.Status == 3) { <span class="badge bg-success">Onaylandı</span> }
                                    else { <span class="badge bg-secondary">@t.Status</span> }
                                </td>
                                <td><small>@t.Description</small></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted text-center py-4 mb-0">Kayıtlı izin talebiniz yok.</p>
            }
        </div>
    </div>
</div>
