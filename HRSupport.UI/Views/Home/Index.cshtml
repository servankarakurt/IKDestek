@model HRSupport.UI.Models.DashboardStatsViewModel
@{
    ViewData["Title"] = "Ana Sayfa - İK Destek Paneli";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="h3 mb-1 text-dark fw-bold">Sistem Özeti</h2>
            <p class="text-muted mb-0">İnsan Kaynakları yönetim paneline hoş geldiniz.</p>
        </div>
        <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-danger shadow-sm fw-bold px-4 py-2 rounded-3">
            <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
        </a>
    </div>
    @if (User.IsInRole("3"))
    {
        <div class="alert alert-info">
            <h5><i class="bi bi-bell"></i> Bildirimler</h5>
            <p>Yöneticiniz sizden haftalık rapor bekliyor! <a href="/Report/MyReports" class="btn btn-sm btn-primary">Şimdi Hazırla</a></p>
        </div>
    }
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-warning alert-dismissible fade show shadow-sm rounded-3 mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @Html.ValidationSummary(false, "", new { @class = "mb-0 d-inline-block" })
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">

        <div class="col-xl-3 col-sm-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 bg-white">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted mb-1 text-uppercase fw-bold" style="font-size: 0.85rem; letter-spacing: 0.5px;">Toplam Çalışan</p>
                            <h2 class="mb-0 fw-bold text-dark display-5">@Model.TotalEmployees</h2>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded-4">
                            <i class="bi bi-people-fill text-primary" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 bg-white">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted mb-1 text-uppercase fw-bold" style="font-size: 0.85rem; letter-spacing: 0.5px;">Toplam Stajyer</p>
                            <h2 class="mb-0 fw-bold text-dark display-5">@Model.TotalInterns</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded-4">
                            <i class="bi bi-mortarboard-fill text-success" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 bg-white">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted mb-1 text-uppercase fw-bold" style="font-size: 0.85rem; letter-spacing: 0.5px;">Bekleyen İzinler</p>
                            <h2 class="mb-0 fw-bold text-dark display-5">@Model.PendingLeaveRequests</h2>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded-4">
                            <i class="bi bi-hourglass-split text-warning" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6">
            <div class="card border-0 shadow-sm rounded-4 h-100 bg-white">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted mb-1 text-uppercase fw-bold" style="font-size: 0.85rem; letter-spacing: 0.5px;">Onaylanan İzinler</p>
                            <h2 class="mb-0 fw-bold text-dark display-5">@Model.ApprovedLeaveRequests</h2>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded-4">
                            <i class="bi bi-check-circle-fill text-info" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>