@model HRSupport.UI.Models.DashboardStatsViewModel
@{
    ViewData["Title"] = "Ana Sayfa - Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <h2 class="h3 text-gray-800">Sistem Özeti</h2>
    <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger btn-sm">Çıkış Yap</a>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning">
        @Html.ValidationSummary(false, "", new { @class = "mb-0" })
    </div>
}

<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Toplam Çalışan</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalEmployees</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Toplam Stajyer</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalInterns</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Bekleyen İzinler</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingLeaveRequests</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Onaylanan İzinler</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ApprovedLeaveRequests</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>