@{
    ViewData["Title"] = "Giriş - İK Destek";
}

<link rel="stylesheet" href="~/css/landing.css" />

<div class="d-flex vh-100 align-items-center justify-content-center bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 text-center mb-4">
                <h1 class="fw-bold">İK Destek</h1>
                <p class="text-muted">Giriş yapmak için bir rol seçin</p>
            </div>
        </div>

        <div class="row gy-4 justify-content-center landing-row">
            <div class="col-md-3">
                <div class="card shadow-sm h-100 text-center p-4 rounded-4 landing-card">
                    <img src="/images/HR.jpg" alt="İK" class="img-fluid mb-3" style="height:120px; object-fit:contain;" />
                    <h4 class="fw-bold">İK Girişi</h4>
                    <p class="text-muted">Çalışan yönetimi, onaylar ve raporlar için İK paneline giriş yapın.</p>
                    <a class="btn btn-primary mt-2 px-4" href="/Dashboard">Giriş Yap</a>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card shadow-sm h-100 text-center p-4 rounded-4 landing-card">
                    <img src="~/images/Manager.jpg" alt="Yönetici" class="img-fluid mb-3" style="height:120px; object-fit:contain;" />
                    <h4 class="fw-bold">Yönetici Girişi</h4>
                    <p class="text-muted">Ekip yönetimi ve izin onay süreçleri için yönetici paneline giriş yapın.</p>
                    <a class="btn btn-info mt-2 px-4 text-white" href="/Dashboard">Giriş Yap</a>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card shadow-sm h-100 text-center p-4 rounded-4 landing-card">
                    <img src="~/images/Employee.jpg" alt="Çalışan" class="img-fluid mb-3" style="height:120px; object-fit:contain;" />
                    <h4 class="fw-bold">Çalışan Girişi</h4>
                    <p class="text-muted">Personelinizin kendi hesaplarına erişmesi ve taleplerini yönetmesi için giriş.</p>
                    <a class="btn btn-success mt-2 px-4" href="/EmployeePanel">Giriş Yap</a>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card shadow-sm h-100 text-center p-4 rounded-4 landing-card">
                    <img src="~/images/Intern.jpg" alt="Stajyer" class="img-fluid mb-3" style="height:120px; object-fit:contain;" />
                    <h4 class="fw-bold">Stajyer Girişi</h4>
                    <p class="text-muted">Stajyerlerin başvuruları ve görevleri için özel erişim.</p>
                    <a class="btn btn-warning mt-2 px-4 text-white" href="/EmployeePanel">Giriş Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>
