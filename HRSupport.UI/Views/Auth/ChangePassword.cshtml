@model HRSupport.UI.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifre Değiştir";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-key me-2"></i>Şifre Değiştir</h5>
                    <small class="text-muted">Geçici şifrenizi güvenli bir şifre ile değiştirin.</small>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }
                    <form asp-action="ChangePassword" asp-controller="Auth" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">Mevcut şifre</label>
                            <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="••••••••" autofocus />
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">Yeni şifre</label>
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">Yeni şifre (tekrar)</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100"><i class="bi bi-check2 me-2"></i>Şifreyi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
